    <category>
        <pattern>* FAR # BETWEEN * AND * </pattern>
        <template>
            <srai>DISTANCE <star index="3"/> <star index="4"/></srai>
        </template>
    </category>

    <category>
        <pattern>* FAR # FROM * TO * </pattern>
        <template>
            <srai>DISTANCE <star index="3"/> <star index="4"/></srai>
        </template>
    </category>

    <category>
        <pattern># DISTANCE FROM * TO * </pattern>
        <template>
            <srai>DISTANCE <star index="2"/> <star index="3"/></srai>
        </template>
    </category>

    <category>
        <pattern># DISTANCE * TO * </pattern>
        <template>
            <srai>DISTANCE <star index="2"/> <star index="3"/></srai>
        </template>
    </category>

    <category>
        <pattern># DISTANCE * BETWEEN * </pattern>
        <template>
            <srai>DISTANCE <star index="2"/> <star index="3"/></srai>
        </template>
    </category>

    <category>
        <pattern># DISTANCE BETWEEN * AND * </pattern>
        <template>
            <srai>DISTANCE <star index="2"/> <star index="3"/></srai>
        </template>
    </category>

    <category>
        <pattern># MILES BETWEEN * AND * </pattern>
        <template>
            <srai>DISTANCE <star index="2"/> <star index="3"/></srai>
        </template>
    </category>

    <category>
        <pattern># MILES FROM * TO * </pattern>
        <template>
            <srai>DISTANCE <star index="2"/> <star index="3"/></srai>
        </template>
    </category>

    <category>
        <pattern>
            DISTANCE * *
        </pattern>
        <template>
            <think>
                <set name="active"><bot name="mapping" /></set>
            </think>
            <condition name="active">
                <li value="true">
                    <srai>
                        SHOW_DISTANCE
                        <extension path="programy.extensions.maps.maps.GoogleMapsExtension">
                            DISTANCE <star index="1"/> <star index="2"/>
                        </extension>
                    </srai>
                </li>
                <li>Unfortunately my mapping software is not listening right now, you will need to speak to my bot master to enable it.</li>
            </condition>
        </template>
    </category>

    <category>
        <pattern>SHOW_DISTANCE DISTANCE DEC * FRAC * UNITS *</pattern>
        <template>
            <think>
                <set name="decimal"><star index="1" /></set>
                <set name="fraction"><star index="2" /></set>
                <set name="units"><star index="3" /></set>
            </think>
            It is <get name="decimal" />.<get name="fraction" /> <get name="units" />
        </template>
    </category>

     <category>
        <pattern># HOW # GET FROM * TO *</pattern>
        <template>
            <srai>DIRECTIONS <star index="3"/> <star index="4"/></srai>
        </template>
    </category>

    <category>
        <pattern>
            DIRECTIONS * *
        </pattern>
        <template>
            <think>
                <set name="active"><bot name="mapping" /></set>
            </think>
            <condition name="active">
                <li value="true">
                    <srai>
                        SHOW_DIRECTIONS
                        <extension path="programy.extensions.maps.maps.GoogleMapsExtension">
                            DIRECTIONS <star index="1"/> <star index="2"/>
                        </extension>
                    </srai>
                </li>
                <li>Unfortunately my mapping software is not listening right now, you will need to speak to my bot master to enable it.</li>
            </condition>
        </template>
    </category>

    <category>
        <pattern>SHOW_DIRECTIONS DIRECTIONS *</pattern>
        <template>
            <think>
                <set name="directions"><star index="1" /></set>
            </think>
            To get there <get name="directions" />
        </template>
    </category>

</aiml>